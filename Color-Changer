print("--> Made by zHeiw / Color changer <--")

local plr = game.Players.LocalPlayer.Character

color = BrickColor.new("Really black")

while wait() do
	
	if plr.Kagune.Name == "Kagune" then
		
		for i,v in pairs(plr.Kagune:GetChildren()) do
			v.BrickColor = color
		end
		
	elseif plr.Quinque == "Quinque" then
		
		for i,v in pairs(plr.Quinque:GetChildren()) do
			v.BrickColor = color
		end
		
	else
		print("!ERROR!")
	end
	
end
